<UserControl x:Class="MuziekApplicatieMVVM.Views.Home"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <!-- Welcome message -->
        <TextBlock Text="MuziekBeheer Applicatie" FontWeight="Bold" FontSize="20" HorizontalAlignment="Center" Margin="0,20,0,20"/>

        <!-- Greeting message -->
       
        <!-- Options -->
        <StackPanel Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center">
            <Button Content="View Songs" Width="150" Height="40"/>
            <Button Content="View Albums" Width="150" Height="40" />
            <Button Content="Add Song" Width="150" Height="40"/>
            <Button Content="Add Album" Width="150" Height="40"/>
        </StackPanel>
    </Grid>
</UserControl>
    
    
